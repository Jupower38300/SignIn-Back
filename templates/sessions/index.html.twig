{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        .action {
            text-align:center;
        }

        .admin {
            display:flex;
            background: linear-gradient(135deg,rgb(61, 16, 87) 0%,rgb(40, 6, 63) 100%);
            padding:10px 25px;
            border-radius:10px;
            color: white;
            text-decoration:none;
            margin-left:10px;
            font-weight: bold;
        }
        

        .action .btn {
            text-decoration:none;
            color: white;
            padding: 15px 20px;
            background:rgb(0, 71, 143);
            border-radius: 10px;

        }

        .container.py-5 {
            max-width: 1200px;
        }

        h1.h3 {
            color: #2c3e50;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        body {
            background:rgb(7, 7, 7);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            text-align:center;
        }

        .container.py-5 {
            max-width: 1200px;
        }

        h1.h3 {
            color:white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .title {
            display:flex;
            flex-direction: row;
            align-items: center;
            margin-bottom: 4em;
            margin-top: 4em;
            margin-left: 2em;
        }

        .title .h3 {
            margin-right: 20px;
        }

        button {
            cursor: pointer;
        }

        .table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.05);
            border: none;
            width:80%;
        }

        .table thead th {
            background: #f8f9fa;
            color: #6c757d;
            font-weight: 600;
            padding: 1.2rem;
            border-bottom: 2px solid #e9ecef;
        }

        span {
            color: #6c757d;
        }

        .table tbody td {
            padding: 1rem 1.2rem;
            vertical-align: middle;
            border-color: #e9ecef;
            color: #6c757d;
        }

        .btn-success {
            background: linear-gradient(135deg, #3bd977 0%, #2db85c 100%);
            border: none;
            text-decoration: none;
            color:black;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .table-responsive {
            display:flex;
            justify-content:center;
            margin-top: 20px;
            
        }

        /* Style original de la modale (restaurÃ©) */
        .modal {
            display: none;
            align-items: center;
            justify-content: center;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1050;
            padding: 2rem;
        }

        .modal-content-modern {
            background: #fff;
            padding: 2rem 2.5rem;
            border-radius: 16px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            animation: fadeIn 0.3s ease-in-out;
            position: relative;
        }

        .modal-content-modern .close {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            color: #888;
            cursor: pointer;
            transition: color 0.2s;
        }

        .form-control-modern {
            border-radius: 10px;
            border: 1px solid #ccc;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: border-color 0.2s;
        }

        .form-input {
            display: flex;
            flex-direction: column;
            text-align: left;
            margin-bottom: 30px;
        }

        .form-label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.98);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Conserve le style moderne du reste */
        .table-hover tbody tr:hover {
            background-color: #f8fafc;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="title">
        <h1 class="h3">ðŸ“‹ Liste des Sessions</h1>
        <button id="openModalBtn" class="btn btn-success shadow">
            + Nouvelle session
        </button>

        <a href="{{ path('admin') }}" 
            class="admin">
            Voir Admin
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col" style="width: 80px;">#</th>
                    <th scope="col">Nom de la session</th>
                    <th scope="col" style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for session in sessions %}
                    <tr>
                        <td class="text-muted">{{ session.id }}</td>
                        <td>
                            <span class="fw-medium">{{ session.nomSession }}</span>
                            <div class="text-muted small mt-1">
                                {{ session.dateStart|date('d/m/Y') }} - {{ session.dateEnd|date('d/m/Y') }}
                            </div>
                        </td>
                        <td class="action">
                            <a href="{{ path('session_show', {'id': session.id}) }}" 
                               class="btn btn-outline-primary btn-sm">
                                Voir QR Code
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-5">
                            <div class="text-muted mb-3">ðŸ“­ Aucune session trouvÃ©e</div>
                            <button id="openModalBtn" class="btn btn-sm btn-outline-success">
                                CrÃ©er une premiÃ¨re session
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div id="createSessionModal" class="modal">
    <div class="modal-content-modern">
        <span class="close">&times;</span>
        <h2 class="text-center mb-4 fw-semibold">CrÃ©er une nouvelle session</h2>
        {{ form_start(form) }}
            <div class="d-flex flex-column gap-3">
                <div class="form-input">
                    {{ form_label(form.nom_session, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom_session, {'attr': {'class': 'form-control form-control-modern'}}) }}
                </div>

                <div class="form-input">
                    {{ form_label(form.date_start, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_start, {'attr': {'class': 'form-control form-control-modern'}}) }}
                </div>

                <div class="form-input">
                    {{ form_label(form.date_end, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_end, {'attr': {'class': 'form-control form-control-modern'}}) }}
                </div>

                <div class="form-input">
                    {{ form_label(form.formateur, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.formateur, {'attr': {'class': 'form-select form-control-modern'}}) }}
                </div>

                <div class="text-center pt-3">
                    <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm rounded-pill">
                        ðŸ’¾ Enregistrer
                    </button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById("createSessionModal");
            const btn = document.getElementById("openModalBtn");
            const span = document.getElementsByClassName("close")[0];

            btn.onclick = () => modal.style.display = "flex";
            span.onclick = () => modal.style.display = "none";
            window.onclick = (event) => {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>
{% endblock %}