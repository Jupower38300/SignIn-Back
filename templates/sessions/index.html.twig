{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }
        
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
            border-radius: 5px;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Sessions</h1>
        <button id="openModalBtn" class="btn btn-primary">Créer une session</button>
    </div>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <!-- Ajoutez d'autres colonnes selon votre entité -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{ session.id }}</td>
                    <td>{{ session.nomSession }}</td>
                    <!-- Ajoutez d'autres propriétés selon votre entité -->
                    <td>
                        <a href="{{ path('session_show', {'id': session.id}) }}" class="btn btn-primary btn-sm">
                            Voir QR Code
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune session trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Modal pour créer une session -->
<div id="createSessionModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Créer une nouvelle session</h2>
        
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nom_session) }}
                {{ form_widget(form.nom_session) }}
                {{ form_errors(form.nom_session) }}
            </div>
            
            <!-- Ajoutez d'autres champs de formulaire ici si nécessaire -->
            
            <div class="text-end">
                <button type="submit" class="btn btn-success">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var modal = document.getElementById("createSessionModal");
            var btn = document.getElementById("openModalBtn");
            var span = document.getElementsByClassName("close")[0];
            
            // Ouvrir la modal quand on clique sur le bouton
            btn.onclick = function() {
                modal.style.display = "block";
            }
            
            // Fermer la modal quand on clique sur la croix
            span.onclick = function() {
                modal.style.display = "none";
            }
            
            // Fermer la modal si on clique en dehors
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>
{% endblock %}