{# templates/admin/session_qr.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}QR Code – Session {{ session.nomSession }}{% endblock %}

{% block body %}
<div class="container mt-4">
  <h1>QR Code pour la session « {{ session.nomSession }} »</h1>
  <p><strong>ID :</strong> {{ session.id }}</p>
  {% if session.dateStart %}
    <p><strong>Début :</strong> {{ session.dateStart|date('d/m/Y H:i') }}</p>
  {% endif %}

  <div class="mt-4 text-center">
    <img 
      src="{{ qrCodeUrl }}?t={{ 'now'|date('U') }}" 
      alt="QR Code" 
      style="width:300px; height:300px; border:10px solid #fff;"
    />
  </div>

  <div class="mt-3">
    <a href="{{ path('admin', {crudControllerFqcn: 'App\\\\Controller\\\\Admin\\\\SessionsCrudController'}) }}" 
       class="btn btn-secondary">
      Retour à la liste
    </a>
  </div>
</div>
{% endblock %}
